div
  form(method: 'post')
    div 
      - if (error)
        - if (error.type == 'name') 
          p.error No users with name “#{ error.data }” were found in our database.
        - if (error.type == 'password')
          p.error The password doesn't match.
      p
        label(for: 'login') Login
        input(id: 'login', name: 'login') 
      p 
        label(for: 'password') Password
        input(id: 'password', name: 'password')
        - if (redirectUri != '')
          input(type: 'hidden', value: redirectUri, name: 'redirect-uri')
      p
        input(type: 'submit', value: 'submit')
